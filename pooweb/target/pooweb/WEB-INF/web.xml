<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <welcome-file-list>
    <welcome-file>indexi.jsp</welcome-file>
  </welcome-file-list>
  <!-- creamos un elemento -->
  <servlet>
  <!-- nombre del servlet, recomendable que sea igual al de la clase que creamos dentro de web app -->
    <servlet-name>Servlet</servlet-name>
    <!-- clase de la que viene -->
    <servlet-class>Servlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>Servlet</servlet-name>
    <!-- url siempre en minuscula -->
    <url-pattern>/servlet</url-pattern>
  </servlet-mapping>

</web-app>
